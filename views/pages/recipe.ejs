<%- include ("../partials/header") %>
<div class = "container">
    <%- include ("../partials/nav") %>
    <div class = "text-center">
        <img id = "recipeImg" src = <%-image_url%> class="img-fluid">
    </div>
    <br>

    <h1 id = "recipeName">
      <%if(recipe_name){%>
        <%- recipe_name %>
      <%}%>
    </h1>
    <h6 id = "description">
      <%if(summary){%>
        <%- summary %>
      <%}%>
    </h6>
    <br>
    <table class = "table">
        <thead>
            <tr>
                <th scope = "col">Ready in Minutes</th>
                <th scope = "col">Servings</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td id = "minutes">
                  <% if(cook_time){%>
                    <%- cook_time %>
                  <%}%>
                </td>
                <td id = "servings">
                  <% if(servings){%>
                    <%- servings %>
                  <%}%>
                </td>
            </tr>
        </tbody>
    </table>
    <a class= "btn btn-primary" role="button" href=<%-recipe_url%>>Recipe Source</a>
    <button type="button" class="btn btn-success" onclick= "addRecipeToInv()">Add to Inventory</button>

    <br>
    <div class = "row">
        <div class = "col-6">
            <h3>Ingredients</h3>
            <ul id = "ingredientList" class="list-group">
              <%if(ingredients){
                var list= '';
                ingredients.forEach(function(item){
                  list+= '<li class="list-group-item">'+ item.originalString + '</li>';
                });%>
                <%-list%>
              <%}%>
            </ul>
        </div>
    </div>


</div>
